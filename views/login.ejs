<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Form</title>
    <link rel="stylesheet" href="./css/login_resistration.css">
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/dcdbbd3571.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
      <div class="container">
        <div class="row">
          <div class="col-md-8 mx-auto">
            <div class="login-container">
              <div class="row">
                <div class="col-md-6">
                  <img class="regi_log_img" src="./image/login.webp" alt="Placeholder Image">
                </div>
                <div class="col-md-6">
                  <img class="loginlogo p-2" src="./image/logo.png" alt="">
                  <h2 class="text-primary p-2">Login</h2>
                  <form>
                    <div class="form-group">
                      <label for="username"><i class="fa-regular fa-user"></i>Username</label>
                      <input type="text" class="form-control p-4" id="username" placeholder="Enter username" required>
                    </div>
                    <div class="form-group">
                      <label for="password"><i class="fa-solid fa-lock"></i>Password</label>
                      <input type="password" class="form-control p-4" id="password" placeholder="Enter password" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block p-2">Login</button>
                  </form>
                  <span class="mt-5">DON'T HAVE AN ACCOUNT</span>
                  <a id="resister" href="./register"> Register Now</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    

      <!-- <a id="resister" href="./desbord.html"> Next</a> -->
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
