<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Form</title>
    <link rel="stylesheet" href="./css/login_resistration.css">
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/dcdbbd3571.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
      <div class="container">
        <div class="row">
          <div class="col-md-8 mx-auto">
            <div class="login-container">
              <div class="row">
                <div class="col-md-6">
                  <img class="regi_log_img" src="./image/login.webp" alt="Placeholder Image">
                </div>
                <div class="col-md-6">
                  <img class="loginlogo p-2" src="./image/logo.png" alt="">
                  <h2 class="text-primary p-2">Login</h2>
                  <% if(msg.length>0){%>
                    <div class="alert alert-success"><%=msg%></div>
    
                  <%}%>
                  <% if(error.length>0){%>
                    <div class="alert alert-danger"><%=error%></div>
    
                  <%}%>
                  <form action="vlogin" method="post">
                    <div class="form-group">
                      <label for="username"><i class="fa-regular fa-user"></i>Username</label>
                      <input name="e" type="text" class="form-control p-4" id="username" placeholder="Enter username" required>
                    </div>
                    <div class="form-group">
                      <label for="password"><i class="fa-solid fa-lock"></i>Password</label>
                      <input name="p"  type="password" class="form-control p-4" id="pass" placeholder="Enter password" required>
                      <input id="check" type="checkbox" /><span>Show Password</span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block p-2">Login</button>
                  </form>
                  <span class="mt-5">DON'T HAVE AN ACCOUNT</span>
                  <a id="resister" href="./register"> Register Now</a>
                  <br>
                  <span class="mt-5 text-uppercase">forgot your password?</span>
                  <a
                    href="#"
                    data-toggle="modal"
                    data-target="#Forgotpassword"
                    >Forgot Password?</a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- modal forgot password -->
      <!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="Forgotpassword" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Forgot Password</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/ForgotPassword" method="post">
          <div class="form-group">
            <label for="Email">Email</label>
            <input
              type="email"
              name="email"
              value=""
              class="form-control"
              id="email"
              placeholder="Enter your email"
              required
            />
          </div>
          <button type="submit" class="btn btn-success btn-block">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
    

      <!-- <a id="resister" href="./desbord.html"> Next</a> -->
    </div>
    <script>
      check.onclick = togglePassword;
      function togglePassword() {
        if (check.checked) pass.type = 'text'
        else pass.type = 'password';
      }
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
